@{
}
<a class="btn btn-primary" href="@Url.Action("Guardar","Students")">Add</a>

@Html.ActionLink("Save","Guardar",new{@class="btn btn-danger"})

<table class="table table-dark" id="tablaEst">
    <thead>
        <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>Acciones</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var iterar in Model)
        {
            <tr>
                <td>@iterar.Name</td>
                <td>@iterar.LastName</td>
                <td>@Html.ActionLink("Delete","Delete",new{id=@iterar.Id},new{@class="btn btn-danger"})</td>
                <td>@Html.ActionLink("Update","Load",new{id=@iterar.Id},new{@class="btn btn-info"})</td>
            </tr>
        }
    </tbody>
</table>

@section scripts{

    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function(){
        var tabla = $('#tablaEst').DataTable();
        }   
        );
    </script>

}